<div class="container">
	<h1><%= @task.title %></h1>
	<div class="task">
		<p><%= @task.details %></p>
		<p><%= @task.completed ? '[x] this task is completed' : '[ ] this task is incomplete' %></p>
	</div>
	<%= link_to 'Back to tasks', tasks_path %>
	<%= link_to 'Edit task', edit_task_path %>
</div>